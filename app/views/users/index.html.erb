<div class="container-fluid">
    <div class="row">
      <div class="col-xs-6">
        <h1>Users</h1>
        <%= link_to "Create new User", new_user_path %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <% if flash[:notice] %>
          <div class="alert alert-success">
            <%= flash[:notice] %>
          </div>
        <% end %>
      </div>
    </div>

    <table class="table table-border table-striped">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
      <% if @users == nil %>
        <tr>
          <td colspan="6">No users found</td>
        </tr>
      <% else %>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= link_to "Edit", edit_user_path(user), class: "btn btn-primary" %></td>
            <td><%= button_to "Delete", user, method: :delete, data: {confirm: "Are you sure you want to delete #{user.first_name} #{user.last_name}"}, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
</div>
